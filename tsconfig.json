{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "paths": {
      "@/*": [
        "src/*",
        "docs/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/client/**/*.ts",
    "src/client/**/*.vue",
    "docs/src/**/*.ts",
    "docs/src/**/*.vue",
    "test/**/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "test"
  ]
}