#!/bin/sh

set -e

npm install

# hubot
export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"
export PORT=8081

# jenkins
export HUBOT_JENKINS_URL="http://10.0.73.95:8080/"
export HUBOT_JENKINS_AUTH="jenkins:PiaJCVdEsYGBqLwwO0GI"

# administrator
export HUBOT_ADMIN_PORT=8082

export HUBOT_ADMIN_PG_URL=""
export HUBOT_ADMIN_PG_USERNAME=""
export HUBOT_ADMIN_PG_PASSWORD=""

exec node_modules/.bin/hubot --name "supergo" "$@"
